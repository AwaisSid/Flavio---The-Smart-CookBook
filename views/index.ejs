    <style>
        :root {
            --primary: #FF6B6B;
            --secondary: #4ECDC4;
            --dark: #292F36;
            --light: #F7FFF7;
            --accent: #FF9F1C;
            --glass: rgba(255, 255, 255, 0.2);
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', 'Segoe UI', sans-serif;
        }
        
        body {
            background-color: var(--light);
            color: var(--dark);
            overflow-x: hidden;
        }

        @keyframes float {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
            100% { transform: translateY(0px); }
        }

        /* Hero Slider */
        .hero-slider {
            height: 100vh;
            width: 100%;
            position: relative;
            overflow: hidden;
        }

        .swiper {
            width: 100%;
            height: 100%;
        }

        .swiper-slide {
            background-position: center;
            background-size: cover;
            filter: blur(4px);
            transform: scale(1.1);
            transition: all 1s ease;
        }

        .swiper-slide-active {
            filter: blur(0);
            transform: scale(1);
        }

        .hero-content {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            z-index: 10;
            background: rgba(0, 0, 0, 0.4);
            backdrop-filter: blur(2px);
        }

        .hero-quote {
            font-size: 3.5rem;
            font-weight: 700;
            color: white;
            margin-bottom: 2rem;
            text-shadow: 2px 2px 8px rgba(0,0,0,0.6);
            max-width: 900px;
            line-height: 1.2;
            font-style: italic;
        }

        .quote-author {
            font-size: 1.5rem;
            color: var(--light);
            font-weight: 300;
            margin-bottom: 3rem;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.5);
        }

        .cta-buttons {
            display: flex;
            gap: 1.5rem;
        }

        .btn {
            padding: 1rem 2.5rem;
            border-radius: 50px;
            border: none;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            display: flex;
            align-items: center;
            gap: 0.8rem;
        }

        .btn-primary {
            background-color: var(--primary);
            color: white;
            box-shadow: 0 10px 20px rgba(255, 107, 107, 0.3);
        }

        .btn-secondary {
            background-color: var(--glass);
            color: white;
            border: 2px solid white;
            backdrop-filter: blur(5px);
        }

        .btn:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.2);
        }

        /* Features Grid */
        .features {
            padding: 6rem 2rem;
            background-color: white;
        }

        .section-title {
            text-align: center;
            margin-bottom: 5rem;
            font-size: 3rem;
            color: var(--dark);
            position: relative;
            display: inline-block;
            left: 50%;
            transform: translateX(-50%);
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -15px;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, var(--primary), var(--accent));
            border-radius: 5px;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 3rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .feature-card {
            background: white;
            border-radius: 15px;
            padding: 2.5rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
            transition: all 0.4s ease;
            text-align: center;
            border-top: 5px solid var(--primary);
        }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.12);
        }

        .feature-icon {
            font-size: 3.5rem;
            margin-bottom: 1.5rem;
            color: var(--primary);
            background: linear-gradient(135deg, var(--primary), var(--accent));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .feature-title {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: var(--dark);
        }

        .feature-desc {
            color: #666;
            line-height: 1.6;
        }

        /* Recipe Showcase */
        .recipe-showcase {
            padding: 6rem 2rem;
            background-color: #f9f9f9;
            position: relative;
            overflow: hidden;
        }

        .showcase-container {
            max-width: 1400px;
            margin: 0 auto;
            position: relative;
        }

        .showcase-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 3rem;
        }

        .showcase-title {
            font-size: 2.5rem;
            color: var(--dark);
        }

        .showcase-nav {
            display: flex;
            gap: 1rem;
        }

        .showcase-btn {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: white;
            border: none;
            color: var(--dark);
            font-size: 1.2rem;
            cursor: pointer;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .showcase-btn:hover {
            background: var(--primary);
            color: white;
        }

        .recipe-carousel {
            display: flex;
            gap: 2rem;
            overflow-x: auto;
            scroll-snap-type: x mandatory;
            scroll-behavior: smooth;
            -webkit-overflow-scrolling: touch;
            padding-bottom: 2rem;
        }

        .recipe-carousel::-webkit-scrollbar {
            height: 8px;
        }

        .recipe-carousel::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }

        .recipe-carousel::-webkit-scrollbar-thumb {
            background: var(--primary);
            border-radius: 10px;
        }

        .recipe-card {
            min-width: 300px;
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            transition: all 0.4s ease;
            scroll-snap-align: start;
            position: relative;
        }

        .recipe-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.15);
        }

        .recipe-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            background: var(--accent);
            color: white;
            padding: 0.3rem 1rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            z-index: 2;
        }

        .recipe-img {
            height: 200px;
            width: 100%;
            object-fit: cover;
        }

        .recipe-content {
            padding: 1.5rem;
        }

        .recipe-title {
            font-size: 1.3rem;
            margin-bottom: 0.5rem;
            color: var(--dark);
        }

        .recipe-meta {
            display: flex;
            justify-content: space-between;
            color: #888;
            font-size: 0.9rem;
            margin-bottom: 1rem;
        }

        .recipe-desc {
            color: #666;
            margin-bottom: 1.5rem;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .recipe-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .view-btn {
            padding: 0.6rem 1.5rem;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 50px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .view-btn:hover {
            background: var(--dark);
            transform: translateY(-2px);
        }

        /* Personalization Section */
        .personalization {
            padding: 6rem 2rem;
            background: linear-gradient(135deg, var(--primary), var(--accent));
            color: white;
            text-align: center;
        }

        .personalization-container {
            max-width: 800px;
            margin: 0 auto;
        }

        .personalization-title {
            font-size: 2.5rem;
            margin-bottom: 1.5rem;
        }

        .personalization-desc {
            font-size: 1.2rem;
            margin-bottom: 3rem;
            line-height: 1.6;
        }

        .preference-tags {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 1rem;
            margin-bottom: 3rem;
        }

        .preference-tag {
            padding: 0.8rem 1.5rem;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50px;
            cursor: pointer;
            transition: all 0.3s ease;
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .preference-tag:hover, .preference-tag.active {
            background: white;
            color: var(--primary);
        }

